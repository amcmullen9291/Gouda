                            <input type="radio" name="breed"value="3">Mozzarella</input>
                            <input type="radio" name="breed"value="7">Goat Cheese</input>
                            <input type="radio" name="breed"value="11">Monterey Jack</input>
                            <input type="radio" name="breed"value="10">String Cheese</input>                                
                            <input type="radio" name="breed"value="9">Swiss Cheese</input>
                            <input type="radio" name="breed"value="6">Pepper Jack Cheese</input>
                            <input type="radio" name="breed"value="8">Colby Cheese</input>                                
                            <input type="radio" name="breed"value="5">Gorgonzola</input>
                            <input type="radio" name="breed"value="2">Feta</input>

                            <p></p>
                            <input type="submit" value="submit">
                            <a href= "#">I digress</a>
                            </form>
                            <% if flash[:notice]%>
                            <%= @notice %>
                            <%end%>
                            </div>
                            </br>
                            </br>
                            <a href= "#HR-PORTAL" class="btn btn-outline-primary"> H.R. Portal</a>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="col-lg-3 col-md-2"></div>
    </div>
</div>  
</body>
</html