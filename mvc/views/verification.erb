                <div class="col-lg-12 login-title">
                    Logged Hours Time Clock
                </div>
                <div class="col-lg-12 login-form">
                        <div class="col-lg-12 login-form">
                        <form action= "/bcs/profile/show" method= "get">
                            <div class="form-group">
                                <label class="form-control-label" >Employee ID</label>
                                <input type= "text" name= "employee[badge_id]" class= "form-control" required: true required="required">
                            <br>
                                <label class="form-control-label" >Password</label>
                                <input type="password" name= "employee[password]" class="form-control" required: true required="required">
                            </div>
                            <div class="col-lg-12 loginbttm"> 
