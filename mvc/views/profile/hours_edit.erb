    <%else%>
        <td><%= @session[:saturday_in]%> </td>
    <%end%>
    <% if @counter = 1 && @shift == 7 %>    
        <td><input type="time" name="hours[sunday_in]" value= <%=@d.strftime("%R")%>></td>    
    <%else%>
        <td><%= @session[:sunday_in]%> </td>
    <%end%>
