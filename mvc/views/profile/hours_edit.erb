        <td><%= @session[:wednesday_in]%> </td>
    <%end%>
    <% if @counter = 1 && @shift == 4 %>           
        <td><input type="time" name="hours[thursday_in]" value= <%=@d.strftime("%R")%>></td>    
    <%else%>
        <td><%= @session[:thursday_in]%> </td>
    <%end%>
    <% if @counter = 1 && @shift == 5 %>    
        <td><input type="time" name="hours[friday_in]" value= <%=@d.strftime("%R")%>></td>    
    <%else%>
        <td><%= @session[:friday_in]%> </td>
    <%end%>
    <% if @counter = 1 && @shift == 6 %>
